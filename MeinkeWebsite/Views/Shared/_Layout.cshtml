<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kehren Development</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeinkeWebsite.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header class="bg-dark text-white py-3 sticky-top">
        <div class="container d-flex justify-content-between align-items-center">
            
            <div class="position-absolute start-50 translate-middle-x">
                <a class="navbar-brand text-white fw-semibold text-decoration-none" asp-controller="Home" asp-action="Index">
                    Kehren Development
                </a>
            </div>

            <div class="d-flex align-items-center gap-3 ms-auto">
                <nav>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-white px-3 rounded hover-effect" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3 rounded hover-effect" asp-controller="Home" asp-action="Cards">Cards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3 rounded hover-effect" asp-controller="Home" asp-action="Carousel">Carousel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3 rounded hover-effect" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </nav>

                <a href="https://github.com/jmeinke28" target="_blank" class="text-white icon-hover-grow" title="My GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38
                                 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13
                                 -.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07
                                 -.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08
                                 -.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.65 7.65 0 0 1 2-.27c.68 0 1.36.09 
                                 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 
                                 0 3.07 -1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 
                                 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                    </svg>
                </a>
            </div>

        </div>
    </header>

    <main class="flex-grow-1 mt-5">
        <div class="container pb-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white py-3 mt-auto">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - Jalen Meinke</span>
            <a href="https://www.uwlax.edu/academics/computer-science/" target="_blank" class="icon-hover-grow" title="UWL Computer Science">
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="white" viewBox="0 0 16 16">
                    <path d="M13 11V3H3v8H2v1h12v-1h-1zM4 4h8v6H4V4z" />
                </svg>
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
